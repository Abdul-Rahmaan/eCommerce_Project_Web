@model eCommerceProjectWeb.Models.SellerEntity
@{
    ViewData["Title"] = "AddSeller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddSeller</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="SellerId" />
                <label asp-for="SellerName" class="control-label"></label>
                <input asp-for="SellerName" class="form-control" />
                <span asp-validation-for="SellerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SellerPhone" class="control-label"></label>
                <input asp-for="SellerPhone" class="form-control" />
                <span asp-validation-for="SellerPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SellerAddress" class="control-label"></label>
                <input asp-for="SellerAddress" class="form-control" />
                <span asp-validation-for="SellerAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SellerCNIC" class="control-label"></label>
                <input asp-for="SellerCNIC" class="form-control" />
                <span asp-validation-for="SellerCNIC" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="SellerEmail" class="control-label"></label>
                <input asp-for="SellerEmail" class="form-control" />
                <span asp-validation-for="SellerEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="SellerList" class="btn btn-outline-success">Seller List</a>
            </div>
        </form>
    </div>
</div>

