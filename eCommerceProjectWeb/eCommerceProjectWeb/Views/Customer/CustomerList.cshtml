@model IEnumerable<eCommerceProjectWeb.Models.CustomerEntity>
@{
    ViewData["Title"] = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<a href="Customer/Seller.html">Go to Seller Page</a>*@

<h1>CustomerList</h1>
<hr />

<p class="float-left">
    <a asp-action="AddCustomer" asp-controller="Customer" class="btn btn-outline-secondary">Add Customer</a>
</p>

<p class="float-right">
    @* <a asp-action="AddCustomer" asp-controller="Item" class="btn btn-outline-secondary">Add Customer</a> |*@
    @*<a asp-action="List" class="btn btn-outline-primary">Item List</a> |
    <a asp-action="DepartmentList" asp-controller="Item" class="btn btn-outline-primary">Category List</a>*@
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.CostName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostAddress)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CostContact)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CostCNIC)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CostEmail)
            </th>

            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CostName)
                </td>             
                <td>
                    @Html.DisplayFor(modelItem => item.CostAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostContact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostCNIC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostEmail)

                </td>
                @*
            <td>
            @Html.DisplayFor(modelItem => item.Type)
            </td>*@

                <td>
                    @Html.ActionLink("Update", "AddCustomer", new {  item.CostId, item.CostName, item.CostAddress, item.CostContact, item.CostCNIC, item.CostEmail } , new { @class="btn btn-outline-success rounded-pill"}) |
                    @Html.ActionLink("Delete", "DeleteCustomer", new {  item.CostId  }, new { @class = "btn btn-outline-danger rounded-pill",onclick="return confirm('Do you really want this record?')" })
                </td>

            </tr>

       
        }
    </tbody>
</table>
